{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "deploy/**/*",
    "scripts/**/*"
  ]
}
